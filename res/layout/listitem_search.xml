<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/RL"
	android:layout_width="wrap_content" android:layout_height="fill_parent">
	
	<ImageView android:id="@+id/thumb"
		android:layout_width="120dp"
		android:layout_height="90dp" 
		android:layout_alignParentRight="true" android:gravity="right"/>
		
	<TableRow android:id="@+id/r1"
		android:layout_width="200dp" 
		android:layout_height="wrap_content" android:layout_alignParentLeft="true">
		
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</TableRow>
	
	
	<TableRow android:id="@+id/r2" 
		android:layout_alignParentBottom="true"	 
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true">
	
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/viewCountLabel" />
	</TableRow>
	
	
	
</RelativeLayout>
	